<header>
  <div class="ui two column grid container">
    <div class="column header-logo">
        <%= link_to("Atonanbo", "/") %>
    </div>

    <!--<% if user_signed_in? %>

    <div class="column" id="current_user">
      <%= current_user.name %>さん<br>(ユーザーID：<%= current_user.id%>)
