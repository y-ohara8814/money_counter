<section class="bg">
    <div class="container ui center aligned">
        <h2 class="title ui center aligned"><%= current_user.name %>さんのマイページ</h2>

<%= @group_array %>

        <!-- 所属するグループIDがある場合 -->
        <% if @groups.present? %>
        <div class="table-wrapper">
            <table border='1' class="ui center aligned striped table">
                <thead class="thead-dark">
                    <tr>
                        <th class="eight wide">所属しているグループ</th>
                        <th class="eight wide"><i class="user icon"></i>メンバー</th>
                    </tr>
                </thead>
                <tbody>
                <% @groups.each do |group|%>
                    <tr>
                        <td class="four wide"><%= link_to(group.name, "/groups/#{group.id}/plans") %></td>
                        <% group.users.each do |user| %>
                        <td class="four wide"><%= user.name %></td>
                        <% end %>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
        <!-- 所属するグループIDがない場合-->
        <% else %>
        <p>ようこそ。まずはプラン設定のため、グループを作成しましょう</p>
        <%= link_to "グループ作成", "/groups/new" %>

        <% end %>
            <br>
            <br>
    </div>
</section>

