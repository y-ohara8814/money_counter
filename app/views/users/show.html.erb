<h2>ユーザーの詳細ページ</h2>

<%= current_user.name %>さん

<!-- 所属するグループIDがある場合 -->
<% if @groups.present? %>
<table border='1' class="table">
    <thead class="thead-dark">
        <tr>
            <th>所属しているグループ</th>
            <th>グループのメンバー</th>
        </tr>
    </thead>
    <tbody>
    <% @groups.each do |group|%>
        <tr>
            <td><%= link_to(group.name, "/groups/#{group.id}/plans") %></td>
            <% group.users.each do |user| %>
            <td><%= user.name %></td>
            <% end %>
        </tr>
    <% end %>
    </tbody>
</table>
<!-- 所属するグループIDがない場合-->
<% else %>
<p>ようこそ。まずはプラン設定のため、グループを作成しましょう</p>
<%= link_to "グループ作成", "/groups/new" %>

<% end %>
    <br>
        <br>



