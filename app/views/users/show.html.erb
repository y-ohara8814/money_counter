<h2>ユーザーの詳細ページ</h2>
<%= @user.name %>さん

<table border='1' class="table">
    <thead class="thead-dark">
        <tr>
            <th>所属しているグループ</th>
            <th>グループのメンバー</th>
        </tr>
    </thead>
    <tbody>
    <% @groups.each do |group|%>
        <tr>
            <td><%= link_to(group.name, "/groups/#{group.id}") %></td>
            <% group.users.each do |user| %>
            <td><%= user.name %></td>
            <% end %>
        </tr>
    <% end %>
    </tbody>




</table>

